<li class="dropdown">
    <a asp-controller="Snack" asp-action="List" class="dropdown-toggle" data-toggle="dropdown" style="color:white">Lanches   </a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Snack" asp-action="List" style="color:black"
                   asp-route-category="@category.Name">@category.Name</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Snack" asp-action="List" asp-route-category="" style="color:black">Todos os Lanches</a>
        </li>
    </ul>
</li>