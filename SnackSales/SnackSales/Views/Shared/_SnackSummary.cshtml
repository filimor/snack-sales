@model Snack

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" class="img-rounded" alt="Imagem meramente ilustrativa" />
    </div>
    <div class="caption">
        <h3 class="pull-right"> @Model.Price.ToString("C")</h3>
        <h3>Lanche: @Model.Name</h3>
        <p>@Model.ShortDescription</p>
    </div>
</div>
