@model Snack

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" class="img-rounded" alt="Imagem meramente ilustrativa"/>
    </div>
    <div class="caption">
        <h3 class="pull-right"> @Model.Price.ToString("C")</h3>
        <h3>
            <a asp-controller="Snack" asp-action="Details" asp-route-snackId="@Model.Id">
                @Model.Name
            </a>
        </h3>
        <p>@Model.ShortDescription</p>
    </div>
    <div class="addToCart text-right">
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="Cart" asp-action="AddToCart">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>